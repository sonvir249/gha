
{% set target = url.isExternal() ? '_blank' : '_self' %}

<div class="bg-green-400 bg-none shadow-none border-0 messages--status text-black py-2 px-4 rounded rounded-large text-left mt-4">
  <span>Hi {{ user.displayname }},</span>
  <a href="{{ url }}" class="text-blue-600 hover:underline font-semibold text-lg" target="{{ target }}">
    Click here
  </a>
  <span> if you would like to subscribe to this group called {{ label }}.</span>
</div>
